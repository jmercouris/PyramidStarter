server {
    listen          80;
    access_log      off;
    error_log       /var/log/nginx/http.error.log;

    charset         utf-8;
    location / {
        uwsgi_pass  unix:///tmp/uwsgi.sock;
        include     uwsgi_params;
    }

    location /static {
        root                    /home/user/source/source;
        expires                 30d;
        add_header              Cache-Control public;
        access_log              off;
    }
}
